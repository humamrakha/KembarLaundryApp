<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg2"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".SignupActivity"
    android:padding="20dp">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="324dp"
        android:layout_height="149dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:scaleX="2"
        android:scaleY="2"
        android:src="@drawable/logo2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edt_usernameRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/shapeemail"
        android:drawableLeft="@drawable/ic_person_black_24dp"
        android:drawablePadding="10dp"
        android:hint="Nama Pengguna"
        android:padding="15dp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/imageView3"
        tools:layout_editor_absoluteX="40dp" />

    <EditText
        android:id="@+id/edt_emailRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/shapeemail"
        android:drawableLeft="@drawable/ic_baseline_email_24"
        android:drawablePadding="10dp"
        android:hint="Email"
        android:padding="15dp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/edt_usernameRegister"
        tools:layout_editor_absoluteX="60dp" />

    <EditText
        android:id="@+id/edt_passwordRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/shapeemail"
        android:drawableLeft="@drawable/ic_lock_black_24dp"
        android:drawablePadding="10dp"
        android:hint="Kata Sandi"
        android:padding="15dp"
        android:password="true"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/edt_emailRegister"
        tools:layout_editor_absoluteX="20dp" />

    <EditText
        android:id="@+id/edt_confPasswordRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/shapeemail"
        android:drawableLeft="@drawable/ic_lock_black_24dp"
        android:drawablePadding="10dp"
        android:hint="Ketik Ulang Kata Sandi"
        android:padding="15dp"
        android:password="true"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/edt_passwordRegister"
        tools:layout_editor_absoluteX="-6dp" />

    <Button
        android:id="@+id/btn_registerRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/shapesignup"
        android:padding="15dp"
        android:shadowColor="@android:color/transparent"
        android:text="Daftar"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/edt_confPasswordRegister"
        tools:layout_editor_absoluteX="20dp" />

    <TextView
        android:id="@+id/textlogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="Anda sudah memiliki akun?"
        android:textColor="@color/black"
        android:textSize="15dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_registerRegister"
        tools:layout_editor_absoluteX="-2dp" />

    <Button
        android:id="@+id/btn_loginRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@android:color/transparent"
        android:padding="15dp"
        android:shadowColor="@android:color/transparent"
        android:text="Masuk"
        android:textColor="@color/purple_700"
        app:layout_constraintTop_toBottomOf="@+id/textlogin"
        tools:layout_editor_absoluteX="0dp" />

</androidx.constraintlayout.widget.ConstraintLayout>