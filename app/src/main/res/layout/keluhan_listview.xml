<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/shapelogin"
    tools:context=".Admin.keluhan_listview">

    <ImageView
        android:id="@+id/kel_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:paddingBottom="5dp"
        android:src="@drawable/profile" />

    <TextView
        android:id="@+id/txt_kel_nama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="9dp"
        android:layout_marginLeft="9dp"
        android:layout_marginEnd="9dp"
        android:layout_marginRight="9dp"
        android:layout_toRightOf="@id/kel_profile"
        android:paddingBottom="0dp"
        android:text="Spiderman"
        android:textColor="#000"
        android:textSize="15dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_kel_telp"
        android:layout_below="@id/txt_kel_nama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/kel_profile"
        android:layout_marginStart="9dp"
        android:layout_marginLeft="9dp"
        android:layout_marginEnd="9dp"
        android:layout_marginRight="9dp"
        android:paddingBottom="5dp"
        android:text="Spiderman"
        android:textSize="12dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_kel_keluhan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_kel_telp"
        android:layout_toRightOf="@id/kel_profile"
        android:layout_marginStart="9dp"
        android:layout_marginLeft="9dp"
        android:layout_marginEnd="9dp"
        android:layout_marginRight="9dp"
        android:paddingBottom="5dp"
        android:text="Spiderman"
        android:textSize="12dp"
        android:textStyle="bold" />

</RelativeLayout>