<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shapelogin"
    tools:context=".Admin.listview">


    <TextView
        android:id="@+id/textViewName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/antri_profile"
        android:paddingLeft="10dp"
        android:layout_marginTop="2dp"
        android:paddingBottom="5dp"
        android:text="Resi"
        android:textColor="#000"
        android:textSize="15dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <TextView
        android:id="@+id/textViewTeam"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewName"
        android:layout_toRightOf="@id/antri_profile"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:text="Nama"
        android:textSize="12dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="57dp" />

    <ImageView
        android:id="@+id/antri_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:paddingBottom="5dp"
        android:src="@drawable/profile" />

    <TextView
        android:id="@+id/textViewBerat"
        android:layout_width="213dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewTeam"
        android:layout_toRightOf="@id/antri_profile"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:text="Berat"
        android:textSize="12dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="57dp" />

    <TextView
        android:id="@+id/textViewBiaya"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewName"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="25dp"
        android:layout_toRightOf="@id/textViewBerat"
        android:paddingLeft="10dp"

        android:text="Berat"
        android:textColor="#008000"
        android:textSize="12dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="57dp" />

    <RadioGroup
        android:id="@+id/radioGroup_antrian"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/antri_profile"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radio_antrian1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:text="Masih dalam antrian" />

        <RadioButton
            android:id="@+id/radio_antrian2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:text="Proses Laundry" />

        <RadioButton
            android:id="@+id/radio_antrian3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:text="Selesai" />

    </RadioGroup>


</RelativeLayout>